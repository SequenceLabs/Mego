%section#events-widget.widget
  %header
    %h3
      Upcoming Events
    %a.rss{:href=>''} RSS
  %ul
    - (2 + rand(2)).times do
      %li
        %a.event-item{:href=>"#",:title=>"Brief summary of article"}
