%section.news-listing
  %header
    %h1
      News

  - (6 + rand(6)).times do
    %a.news-item{:href=>"news-item.html",:title=>"Summary of CTA"}
      = image_tag("http://placehold.it/230x150")
      %article
        %header
          %h2
            = lorem.words (3 + rand(5))
        %p
          = lorem.sentences (3 + rand(5))
        %time{:datetime=>"2009-11-13T20:00Z"}
          3 hours ago
        %span.read-more
          Read more &rarr;