/START mini-search
%section{:class=>"mini-search #{'widget' unless !defined? widget && !widget}"}
  - if defined? title
    %h3
      = title
  %label{:for=>"#{name}"} Search
  %input.field-search{:type=>"text",
    :placeholder=>"Enter keyword",
    :id=>"#{name}"}
  %input.btn-search{:type=>"submit", :value=>"Go"}
/END mini-search

